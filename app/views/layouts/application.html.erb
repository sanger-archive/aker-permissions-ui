<!DOCTYPE html>
<html>
  <head>
    <title>Aker Stamps UI</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
        <div class="container">
          <div class="navbar-header">
          <!-- Display the hamburger button if screen isn't wide enough -->
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navBar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Aker</a>
        </div>
          <div class="collapse navbar-collapse" id="navBar">
          <!-- <ul class="nav navbar-nav">
            <li><%= link_to 'Creation', "#" %></li>
          </ul> -->
          <ul class="nav navbar-nav navbar-right">
              <% if jwt_provided? %>
                <li><p class="navbar-text">Logged in as <%= current_user.email %></p></li>
                <li><%= link_to 'Log out', Rails.configuration.logout_url, method: :delete if Rails.configuration.logout_url %></li>
              <% else %>
                <li><%= link_to 'Log in', Rails.configuration.login_url if Rails.configuration.login_url %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container" id ="content">
      <h1>Stamps UI</h1>

      <div class="row">
        <div class="col-md-12">
          <%= render "flashes" %>
          <%= yield %>
        </div>
      </div>

    </div>
  </body>
</html>
