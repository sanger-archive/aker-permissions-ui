<!DOCTYPE html>
<html>
  <head>
    <title>Aker Stamps UI</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
    <div class="container">
    <div class="navbar-header">
    <!-- Display the hamburger button if screen isn't wide enough -->
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navBar">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Aker</a>
    </div>
    <div class="collapse navbar-collapse" id="navBar">
    <!-- <ul class="nav navbar-nav">
      <li><%= link_to 'Creation', "#" %></li>
    </ul> -->
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Log Out', destroy_user_session_url, method: :delete if user_signed_in? %></li>
    </ul>
    </div>
    </div>
    </nav>

    <div class="container" id ="content">
      <h1>Stamps UI</h1>

      <div class="row">
        <div class="col-md-12">
          <%= render "flashes" %>
          <%= yield %>
        </div>
      </div>

    </div>
  </body>
</html>
